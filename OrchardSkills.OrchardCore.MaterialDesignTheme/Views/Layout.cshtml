<body dir="@Orchard.CultureDir()">
    <nav class="navbar navbar-expand-lg navbar-color" id="mainNav" style="position: sticky;
right: 0;
left: 0;
z-index: 1030;">
        <div class="container">
            <div class="logo">
                <a class="navbar-brand" href="~/#"><img width="40px" height="40px"
                        src="/MaterialDesignTheme/icons/icon-90x90.png" alt="Logo">@Site.SiteName</a>
                <!-- Toggle button -->
                <label id="switch" class="switch navbar-item">
                    <input type="checkbox" onchange="toggleTheme()" id="slider" aria-label="Theme Switch">
                    <span class="slider round"></span>
                </label>
            </div>

            <button class="navbar-toggler nav-tgl" type="button" data-toggle="collapse"
                data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <div class="text-center ml-auto">


                    <a style="color: #fff !important;" type="button"
                        href="https://www.facebook.com/Orchard-Skills-106748460853728/" 
                        target="_blank" 
                        rel="noreferrer" 
                        aria-label="Facebook"
                        rel="noopener"
                        class="btn logo-color btn-floating mx-1">
                        <i class="fab fa-facebook-f"></i>
                    </a>

                    <a style="color: #fff !important;" type="button" href="https://twitter.com/OrchardSkills/" 
                        target="_blank" 
                        rel="noreferrer" 
                        aria-label="Twitter"
                        rel="noopener"
                        class="btn logo-color btn-floating mx-1">
                        <i class="fab fa-twitter"></i>
